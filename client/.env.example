# API Configuration
VITE_API_URL=http://localhost:5000/api
# For production, set this to your deployed server URL:
# VITE_API_URL=https://your-server-name.vercel.app/api

# Socket URL (for real-time, not available on Vercel serverless)
# VITE_SOCKET_URL=http://localhost:5000

# Environment
VITE_NODE_ENV=development

# Google OAuth (these should be configured on the backend)
# VITE_GOOGLE_CLIENT_ID=your_google_client_id
# VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application Configuration
VITE_APP_NAME=TechFlow
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise-grade product landing page

# Analytics (optional)
# VITE_GA_TRACKING_ID=your_google_analytics_id

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SENTRY=false

# Error Reporting (optional)
# VITE_SENTRY_DSN=your_sentry_dsn
